<div class="row py-5 height">
  <div class="col-lg-4 mx-auto">
    <section class="d-flex justify-content-center mt-5 mb-5">
      <span class="text-capitalize text-white bg-dark px-2 py-1 rounded"><%= resource_name %> Registration</span>
    </section>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-5">
        <%= f.text_field :full_name, placeholder: "Full Name", class: "form-control py-2" %>
      </div>

      <div class="field mt-3">
        <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control py-2" %>
      </div>

      <div class="field mt-3">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control py-2" %>
      </div>

      <div class="field mt-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control py-2" %>
      </div>

      <div class="actions mt-4 mb-5">
        <%= f.submit "Sign up", class: "form-control py-2 btn btn-primary fw-bold" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
