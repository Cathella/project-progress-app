<div class="py-5">
  <div class="row">
    <div class="col-lg-4">
      <div class="bg-light py-4 ps-5">
        <h3 class="fw-bold w-75 mt-5">Project:<br><br>
        <span class="text-muted fs-5"><%= @project.name %>.</span>
        </h3>
        <p class="mt-5"><%= link_to "Add Report", new_project_report_path(@project), class: "btn btn-primary fw-bold shadow" %>
      </div>
    </div>
    <div class="col-lg-7 mx-auto">
      <h5 class="border-bottom pb-2 my-4 fw-bold">Project Progress Reports</h5>

      <% @project.reports.each do |report| %>
        <span class="bg-light py-1 ps-3 d-block mb-1">
          <section class="d-flex justify-content-between align-items-center">
            <a href="/projects/<%= @project.id %>/reports/<%= report.id %>">
              <%= report.title %>
            </a>
            <span>
              <small class="me-4 text-muted"><%= report.files.count %> Attachments</small>
              <small class="me-3 text-danger">Not Seen</small>
            </span>
          </section>
        </span>
      <% end %>
    </div>
  </div>
</div>